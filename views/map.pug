    body
        div
            form(action='/addtask' method='POST')
                    fieldset
                        h2 Visualize Bayou-CO2 Feeds
                        p 
                            each feed in feeds
                                ul
                                    li= feed.feedkey
                        //p Enter in the feed keys you'd like to display, one at a time:
                        input#newtask(type='text' name='newfeed' placeholder='add new feed')
                        br
                        button(type='submit') Add Feed
                        
        div.flex-container(id='pop')
            div.flex-child
                //div
                //p.boxsmaller test
                //canvas#chart1
                //p.boxsmaller test
                //canvas(id=2)
                //each feed in feeds
                //    p !{feed.feedkey}
                each val, i in feeds
                    canvas(id='chart'+i)
            div.flex-child
                img(src=map_url)
                

                        
        script(src='/js/feedmap.js')

        script.  
            var bdata = !{JSON.stringify(bayoudata)};
            for (i=0; i<bdata.length;i++) {
                var chartid = "chart"+String(i);
                makeChart(chartid,bdata[i],"co2");
            }